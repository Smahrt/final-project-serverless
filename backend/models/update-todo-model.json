{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "todo",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the todo",
      "minLength": 1,
      "maxLength": 100
    },
    "dueDate": {
      "type": "string",
      "description": "The due date of the todo",
      "format": "date-time"
    },
    "done": {
      "type": "boolean",
      "description": "Whether the todo is done or not"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}